<resources>

    <style name="ToolbarStyle" parent="@style/Widget.MaterialComponents.Toolbar">
        <item name="android:background">?attr/colorPrimary</item>
        <item name="android:elevation">1dp</item>
        <item name="android:outlineProvider">none</item>
        <item name="titleTextColor">@color/gray_900</item>
    </style>

    <style name="TextAppearance.Title" parent="@style/TextAppearance.MaterialComponents.Headline5">
        <item name="android:fontFamily">@font/nunito_sans_bold</item>
        <item name="android:letterSpacing">0.01</item>
    </style>

    <style name="TextAppearance.Relevant" parent="@style/TextAppearance.MaterialComponents.Headline4">
        <item name="android:fontFamily">@font/nunito_sans_extrabold</item>
        <item name="android:letterSpacing">0.01</item>
        <item name="android:textColor">@color/gray_900</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="TextAppearance.Title.Card">
        <item name="android:textSize">18sp</item>
    </style>

    <style name="TextAppearance.Relevant.Card">
        <item name="android:textSize">20sp</item>
    </style>


</resources>
